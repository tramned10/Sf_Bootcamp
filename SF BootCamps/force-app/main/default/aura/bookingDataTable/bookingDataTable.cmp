    <div style="height: 300px">
        <lightning:datatable
            columns="{!v.mycolumns }"
            data="{!v.Flights }"
            keyField="id"
            onrowselection=""/>
    </div>
    </lightning:layoutItem>-->
 
    
    
  
</aura:component>